---
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Skills from "../components/Skills.astro";
import Timeline from "../components/Timeline.astro";
import Title from "../components/Title.astro";
import Projects from "../components/Projects.astro";
import { inject } from "@vercel/analytics";

inject();
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="google-site-verification"
      content="BGgPI-cQGhq0RtJSaJdQcBCgh5FP4B3k2MbOgNOJtb0"
    />
    <meta
      name="description"
      content="Bonjour, je suis développeur fullstack web / devops qui cherche à se lancer dans le freelance. Je travaille principalement avec nodejs, typescript et docker / k8s."
    />
    <meta name="robots" content="index, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Kévin Moreau - Développeur fullstack web - DevOps</title>
  </head>
  <body>
    <span
      style="opacity: 1; user-select: none; position: absolute; top: -18px;"
      class="this-is-for-google-ligthouse-lcp">Test</span
    >
    <Contact />
    <div class="main">
      <Title />
      <About />
      <Timeline />
      <Projects />
      <Skills />
    </div>
  </body>
</html>

<style>
  :root {
    --first-accent: rgb(0, 191, 255);
    --second-accent: rgba(19, 190, 209, 1);
    --accent-gradient-35: linear-gradient(
      90deg,
      rgba(19, 100, 209, 1) 0%,
      rgba(19, 160, 209, 1) 35%
    );
    --accent-gradient-100: linear-gradient(
      90deg,
      rgba(19, 100, 209, 1) 0%,
      rgba(19, 160, 209, 1) 100%
    );
    --side-width: 75px;
    --font-size-gradient: 2.8em;
    --text-font-size: 1.3em;
    --quote-font-size: 1em;
  }
  :global(*) {
    box-sizing: border-box;
  }
  @media screen and (max-width: 1000px) {
    :root {
      --font-size-gradient: 2em;
      --text-font-size: 1em;
      --quote-font-size: 0.6em;
    }
    :global(.title-gradient) {
      text-align: center !important;
    }
  }
  :global(.title-gradient) {
    font-size: var(--font-size-gradient);
    background: var(--accent-gradient-35);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    text-align: left;
  }
  .main {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
  }
  body {
    display: flex;
    flex-direction: row;
    justify-content: center;
    color: white;
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }
  body::-webkit-scrollbar {
    display: none;
  }

  html {
    font-family: system-ui, sans-serif;
    background-color: #2f5172;
    width: 100%;
    margin: 0;
    min-height: 100vh;
  }
</style>
