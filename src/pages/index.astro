	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.title {
		display: flex;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.first-word {
		animation: slide-from-bottom 1s ease 0s 1 alternate both;
		background-image: linear-gradient(45deg, var(--accent), #19c2ec 80%, white 60%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.second-word {
		animation: slide-from-right 1s ease 1s 1 alternate both;
		background-image: linear-gradient(45deg, #1A7CD4 , #19c2ec 20%, white 60%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.dot {
		animation: scale-in 1s ease 2s 1 alternate both;
		background-color: #3ECBEE;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	@keyframes slide-from-bottom {
	0% {
		opacity: 0;
		transform: translateY(75px);
	}

	100% {
		opacity: 1;
		transform: translateY(0);
	}
	
}
@keyframes slide-from-right {
	0% {
		opacity: 0;
		transform: translateX(50px);
	}

	100% {
		opacity: 1;
		transform: translateX(0);
	}
}
@keyframes scale-in {
	0% {
		transform: scale(0);
	}

	100% {
		transform: scale(1);
	}
}
</style>
