---
import About from "../components/about.svelte";
import Contact from "../components/contact.svelte";
import Skills from "../components/skills.svelte";
import Timeline from "../components/timeline.svelte";
import Title from "../components/title.svelte";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Kévin Moreau</title>
  </head>
  <body>
    <div class="contact"><Contact /></div>
    <div class="main">
      <Title
        title="Kévin Moreau."
        subtitle="Développeur fullstack web / DevOps"
        client:only
      />
      <section id="about">
        <About client:only />
      </section>
      <Timeline client:load />
      <Skills />
    </div>
    <div class="email"></div>
  </body>
</html>

<style>
  :root {
    --accent: #1a69d1;
    --accent-gradient: linear-gradient(
      45deg,
      var(--accent),
      #19c2ec 50%,
      white 60%
    );
    --side-width: 75px;
  }
  .main {
    min-height: 150vh;
    flex: 1;
    margin: 0 var(--side-width);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  body {
    display: flex;
    flex-direction: row;
    justify-content: center;
    color: white;
  }
  body::-webkit-scrollbar {
    display: none;
  }

  .contact,
  .email {
    width: var(--side-width);
    min-height: 100vh;
    position: fixed;
  }
  .contact {
    left: 0;
    top: 0;
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
  }
  .email {
    right: 0;
    top: 0;
  }
  header {
    background-color: black;
    position: sticky;
    top: 0px;
    z-index: 1;
    height: 60px;
    width: 100%;
  }
  body {
    margin: 0;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #2c3e50;
  }
</style>
